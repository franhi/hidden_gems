<div class="navbar-wagon">
  <!-- Logo -->
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
      <i class="fas fa-gem"></i>
    <% end %>

  <!-- Right Navigation -->
  <% if user_signed_in? %>
    <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to 'Home', root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Gems', posts_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Add a gem', new_post_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Profile picture with dropdown list -->

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <img src="https://avatars3.githubusercontent.com/u/39048473?v=4" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li><%= link_to 'Your profile', user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %></li>
          </ul>
        </div>

      </div>
    </div>
    <% else %>
      <div class="navbar-wagon-right hidden-xs hidden-sm">
      <%= link_to 'Home', root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Gems', posts_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Add a gem', new_post_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to 'Sign in', new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      </div>
    <% end %>


