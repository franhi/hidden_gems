  <div> <%= @post.category %> </div>
<h1> <%= @post.title %> <h1>
  <p> <%= @post.city %> </p>
  <p> <%= @post.description %> </p>

<div> Reviews
  <% if @average != "No ratings" || @average.nil? %>
   <% @average.times do %>
     <i class="fas fa-star"> </i>
     <% end %>
     (<%= @post.reviews.count %>)
   <% end %>


<div>
  <% @post.reviews.each do |review| %>
    <h4><%=review.description %></h4>
    <p> <%= review.user.email %> <br>
        <%= review.created_at.strftime("%d %B %Y") %>
        &nbsp;
        <% review.rating.times do %>
          <i class="fas fa-star"> </i>
        <% end %>
        &nbsp;
        <%= link_to like_post_review_path(review), method: :put do %>
          <i class="fas fa-arrow-up"></i>
          <%= review.get_upvotes.size %>
        <% end %>
        <%= link_to dislike_post_review_path(review), method: :put do %>
          <i class="fas fa-arrow-down"></i>
          <%= review.get_downvotes.size %>
        <% end %>
    </p>
  <% end %>
 </div>

</div>


