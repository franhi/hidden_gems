<div class="content">
  <div class="cards-container">
    <div class="row">
      <% @posts.each do |post| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card" style="background-image: url(../images/mojito.jpg)">
          <%= post.title %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  ></div>
</div>
